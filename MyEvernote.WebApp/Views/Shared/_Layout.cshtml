
@using MyEvernote.Entities;

@{
    EvernoteUser user = null;

    if (Session["login"] != null)
    {
        user = Session["login"] as EvernoteUser;
    }
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/myEvernote.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">My Evernote</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">

                <!-- Sol Menü -->
                <ul class="navbar-nav">

                    @if (user != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fa fa-cogs"></i>
                                Yönetim
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/MostLiked">
                            <i class="fa fa-heart"></i>
                            En Beğenilenler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">
                            <i class="fa fa-list"></i>
                            Son Yazılar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">
                            <i class="fa fa-info-circle"></i>
                            Hakkımızda
                        </a>
                    </li>
                </ul>


                <!-- Sağ Menü -->
                <ul class="navbar-nav ml-auto">

                    @if (user == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Login">
                                <i class="fa fa-sign-in"></i>
                                Giriş
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Register">
                                <i class="fa fa-user-plus"></i>
                                Üye Ol
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/ShowProfile">
                                <i class="fa fa-user"></i>
                                @user.Username
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Logout">
                                <i class="fa fa-sign-out"></i>
                                Çıkış
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    @RenderBody()


    <!-- Footer -->
    @RenderSection("footer", false)

    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/umd/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @*<script src="~/Scripts/bootstrap.bundle.min.js"></script>*@

    @RenderSection("myScript", false)

</body>
</html>
