<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/myEvernote.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index">My Evernote</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">

                <!-- Sol Menü -->
                <ul class="navbar-nav">

                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa fa-cogs"></i>
                            Yönetim
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/MostLiked">
                            <i class="fa fa-heart"></i>
                            En Beğenilenler
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Index">
                            <i class="fa fa-list"></i>
                            Son Yazılar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">
                            <i class="fa fa-info-circle"></i>
                            Hakkımızda
                        </a>
                    </li>
                </ul>


                <!-- Sağ Menü -->
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Login">
                            <i class="fa fa-sign-in"></i>
                            Giriş
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Register">
                            <i class="fa fa-user-plus"></i>
                            Üye Ol
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fa fa-user"></i>
                            Kullanıcı Adı
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Logout">
                            <i class="fa fa-sign-out"></i>
                            Çıkış
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    @RenderBody()


    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-md-4 text-center">

                    <h5><strong>Site Haritası</strong></h5>
                    <hr />

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-info-circle"></i> Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-heart"></i> En Beğenilenler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#"><i class="fa fa-list"></i> Son Yazılanlar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 text-center">

                    <h5><strong>MyEvernote</strong></h5>
                    <hr />

                    <p>Her hakkı saklıdır MyEvernote @DateTime.Now.Year</p>
                </div>
                <div class="col-md-4 text-center">

                    <h5><strong>E-Bülten Üyelik</strong> </h5>
                    <hr />

                    <p>Son gelişmelerden haberdar olmak için E-Bülten sistemimize üye olabilirsiniz.</p>

                    <div class="px-3">
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" placeholder="E-posta adresiniz..." aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-send"></i> Gönder</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </footer>


    <script src="~/Scripts/jquery-3.3.1.slim.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    @RenderSection("myScript",false)

</body>
</html>
