@model MyEvernote.Entities.EvernoteUser

@{
    ViewBag.Title = "Kullanıcı Detay";
}


<div class="container">

    <div class="row">
        <div class="col-md-12 mt-5 mb-3">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>

    <div class="jumbotron">

        <div class="row">

            <div class="col-sm-12">

                <div class="form-group row">
                    <div class="col-md-2">
                        <b>
                            @Html.DisplayNameFor(model => model.Name)
                        </b>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <b>
                            @Html.DisplayNameFor(model => model.Surname)
                        </b>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Surname)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <b>
                            @Html.DisplayNameFor(model => model.Username)
                        </b>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Username)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <b>
                            @Html.DisplayNameFor(model => model.Email)
                        </b>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <b>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </b>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.IsActive)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <b>
                            @Html.DisplayNameFor(model => model.IsAdmin)
                        </b>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.IsAdmin)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <b>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </b>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.CreatedOn)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <b>
                            @Html.DisplayNameFor(model => model.ModifiedOn)
                        </b>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.ModifiedOn)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-2">
                        <b>
                            @Html.DisplayNameFor(model => model.ModifiedUsername)
                        </b>
                    </div>
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.ModifiedUsername)
                    </div>
                </div>

                <div class="form-group row justify-content-end">

                    @Bootstrap.LinkButton("/EvernoteUser/Edit/" + @Model.Id, "warning", String.Empty, String.Empty, "edit", "Düzenle")
                    @Bootstrap.LinkButton("/EvernoteUser/Index", "dark", "mx-3", String.Empty, "reply", "Geri Dön")

                </div>

            </div>

        </div>

    </div>

</div>

