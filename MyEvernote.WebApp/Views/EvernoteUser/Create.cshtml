@model MyEvernote.Entities.EvernoteUser

@{
    ViewBag.Title = "Kullanıcı Ekle";
}

<link href="~/Content/myEvernoteCustomCheckBox.css" rel="stylesheet" />
<link href="~/Content/myEvernoteValidationSummary.css" rel="stylesheet" />

<div class="container">

    <div class="row">
        <div class="col-md-12 mt-5 mb-3">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>

    <div class="jumbotron">

        <div class="row">

            <div class="col-sm-12">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false)

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-form-label col-sm-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "col-form-label col-sm-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "col-form-label col-sm-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-form-label col-sm-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-form-label col-sm-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                        </div>
                    </div>

                    <div class="custom-control custom-checkbox mt-4">
                        @Html.CheckBoxFor(model => model.IsActive, new { @class = "custom-control-input", type = "checkbox" })
                        @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "custom-control-label" })
                    </div>

                    <div class="custom-control custom-checkbox my-4">
                        @Html.CheckBoxFor(model => model.IsAdmin, new { @class = "custom-control-input", type = "checkbox" })
                        @Html.LabelFor(model => model.IsAdmin, htmlAttributes: new { @class = "custom-control-label" })
                    </div>

                    <div class="form-group row justify-content-end">
                        @Bootstrap.Button("submit", "primary", String.Empty, "plus-circle", "Ekle")
                        @Bootstrap.LinkButton("/EvernoteUser/Index", "dark", "mx-3", String.Empty, "reply", "Geri Dön")
                    </div>
                }

            </div>

        </div>

    </div>

</div>

