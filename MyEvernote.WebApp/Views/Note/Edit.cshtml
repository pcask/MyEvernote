@model MyEvernote.Entities.Note

@{
    ViewBag.Title = "Not Güncelle";
}

<link href="~/Content/myEvernoteCustomCheckBox.css" rel="stylesheet" />
<link href="~/Content/myEvernoteValidationSummary.css" rel="stylesheet" />

<div class="container">

    <div class="row">
        <div class="col-md-12 mt-5 mb-3">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>

    <div class="jumbotron">

        <div class="row">

            <div class="col-sm-12">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false)
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-form-label col-sm-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "col-form-label col-sm-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Text, 5, 30, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="custom-control custom-checkbox my-4">
                        @Html.CheckBoxFor(model => model.IsDraft, new { @class = "custom-control-input", type = "checkbox" })
                        @Html.LabelFor(model => model.IsDraft, htmlAttributes: new { @class = "custom-control-label" })
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.CategoryId, "Kategori", htmlAttributes: new { @class = "col-form-label col-sm-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row justify-content-end">

                        @Bootstrap.Button("submit", "success", String.Empty, "save", "Kaydet")
                        @Bootstrap.LinkButton("/Note/Index", "dark", "mx-3", String.Empty, "reply", "Geri Dön")

                    </div>

                }

            </div>

        </div>

    </div>

</div>




