

@helper LinkButton(string id = "", string url = "", string color = "", string addtionalClass = "", string title = "", string icon = "", string text = "")
{
    <a href="@url" id="@id" name="@id" class="btn btn-@color @addtionalClass" title="@title"><i class="fa fa-@icon"></i> @text</a>
}


@helper LinkButton(string url = "", string color = "", string addtionalClass = "", string title = "", string icon = "", string text = "")
{
    <a href="@url" class="btn btn-@color @addtionalClass" title="@title"><i class="fa fa-@icon"></i> @text</a>
}

@helper Button(string id = "", string type = "button", string color = "", string addtionalClass = "", string icon = "", string text = "")
{
    <button id="@id" name="@id" type="@type" class="btn btn-@color @addtionalClass">
        <i class="fa fa-@icon"></i> @text
    </button>
}

@helper Button(string type = "button", string color = "", string addtionalClass = "", string icon = "", string text = "")
{
    <button type="@type" class="btn btn-@color @addtionalClass">
        <i class="fa fa-@icon"></i> @text
    </button>
}


@helper LinkMenu(string cssClass = "", string url = "", string icon = "", string text = "")
{
    <a class="@cssClass" href="@url"><i class="fa fa-@icon"></i> @text</a>
}